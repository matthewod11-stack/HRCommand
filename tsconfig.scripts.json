{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./scripts/dist",
    "rootDir": "./scripts",
    "resolveJsonModule": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["scripts/generated"],
  "ts-node": {
    "esm": true
  }
}
